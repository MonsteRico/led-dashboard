[Unit]
Description=LED Dashboard
After=network.target

[Service]
# Run as the pi user (important so we donâ€™t need full sudo for normal ops)
User=pi
WorkingDirectory=/home/pi/led-dashboard

# Start the compiled build
ExecStart=/home/pi/.bun/bin/bun run dist/index.js

# Auto-restart on crashes
Restart=always
RestartSec=5

# Environment file for optional settings (safe if missing)
EnvironmentFile=-/home/pi/led-dashboard/.env

# Where logs go
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
